<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.concisesoftware.myanimationsapplication.animapp.SlidingFromBottomMenuActivity">

    <View
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#000012" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#000123" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#001234" />
    <TextView
        android:text="@string/hello_world"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:textSize="25sp"
        android:background="#012345"
        android:gravity="center"/>
    <View
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#0A2C4E" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#123456" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#234567" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#345678" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#456789" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#56789A" />

</LinearLayout>
